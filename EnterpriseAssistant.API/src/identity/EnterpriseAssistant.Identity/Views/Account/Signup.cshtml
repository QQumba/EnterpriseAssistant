@model EnterpriseAssistant.Identity.Quickstart.Account.SignupViewModel

<div class="login-page">
    <div class="lead">
        <h1>Create new user</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Signup" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Login"></label>
                            <input class="form-control" placeholder="Login" asp-for="Login" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input class="form-control" placeholder="Full name" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Position"></label>
                            <input class="form-control" placeholder="Position" asp-for="Position">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirmation"></label>
                            <input type="password" class="form-control" placeholder="Confirm password" asp-for="PasswordConfirmation" autocomplete="off">
                        </div>

                        <button class="btn btn-primary" name="button" value="login">Login</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>